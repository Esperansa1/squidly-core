{
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^4.0"
    },
    
    "scripts": {
        "lint": "find . -type f -name '*.php' -not -path './vendor/*' -exec php -l {} +",
        "test": [
            "@lint",
            "vendor/bin/phpunit --colors=always"
        ]
    },
    "autoload": {
        "classmap": [
            "includes/"
        ]
    }
    
}
